<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RedActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@color/white"
        android:background="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Red Screen"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#ff0044"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/tv_name_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data_name"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity :"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_quantity_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data_quantity"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_quantity"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price :"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_price_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data_price"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total :"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_total_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data_total"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_total"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_tax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tax :"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_total"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_tax_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data_tax"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_tax"
        app:layout_constraintTop_toBottomOf="@+id/tv_total_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_final_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final Price :"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tax"
        android:layout_margin="8dp"
        />

    <TextView
        android:id="@+id/tv_final_price_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="data_final_price"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_primary_dark"
        app:layout_constraintStart_toEndOf="@+id/tv_final_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_tax_data"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>